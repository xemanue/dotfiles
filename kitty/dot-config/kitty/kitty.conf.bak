# BEGIN_KITTY_THEME
# Catppuccin-Mocha
include current-theme.conf
# END_KITTY_THEME


# Font settings
font_size               12.0
font_family             JetBrainsMono NF Bold
bold_font               JetBrainsMono NF SemiBold
italic_font             JetBrainsMono NF SemiBold
bold_italic_font        JetBrainsMono NF SemiBold

# Cursor settings
cursor_shape            block
cursor_blink_interval   0

# Mouse settings
mouse_hide_wait         0

# Bell settings
enable_audio_bell       no

# Window settings
window_padding_width    5
window_border_width     2px
window_margin_width     5

# Tabs
tab_bar_min_tabs        1
tab_bar_edge            bottom
tab_bar_style           powerline
tab_powerline_style     slanted
tab_bar_align           left
tab_title_template      "{index} / {title[title.rfind('/')+1:]}"
tab_title_max_length    0

# Ligatures
disable_ligatures       always

# Shell overrides cursor shape
shell_integration       no-cursor
