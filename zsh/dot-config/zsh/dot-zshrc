# Path to your oh-my-zsh installation.
export ZSH="$HOME/.config/omz"

# Global variables
path=("$HOME/bin" $path)
path=("$HOME/.local/bin" $path)
path=("$HOME/.spicetify" $path)
export PATH

export MANPAGER="nvim +Man!"

eval "$(zoxide init zsh)"

# Aliases
alias clsh="echo \"\" > $HOME/.config/zsh/.zsh_history"
alias :q="exit"
alias ff="fastfetch"
alias lazyvim="NVIM_APPNAME=lazyvim nvim"

zstyle ':omz:plugins:git' aliases no  # Disable omz's defaults for git

alias gs="git status"
alias gd="git diff --output-indicator-new=' ' --output-indicator-old=' '"
alias gds="git diff --staged"
alias ga="git add"
alias gap="git add --patch"
alias gc="git commit"
alias gp="git push"
alias gu="git pull"
alias gl="git log --graph --all --pretty=format:'%C(cyan)%h %C(brightwhite)%an %C(brightblack)%ar %C(auto) %D%n%s%n'"
alias gb="git branch"
alias gco="git checkout"
alias gi="git init"
alias gcl="git clone"
alias gr='if [ "`git rev-parse --show-cdup`" != "" ]; then cd `git rev-parse --show-cdup`; fi'

# Theme
ZSH_THEME="typewritten"

TYPEWRITTEN_PROMPT_LAYOUT="singleline"
TYPEWRITTEN_SYMBOL=""
TYPEWRITTEN_ARROW_SYMBOL=" "
TYPEWRITTEN_RELATIVE_PATH="adaptive"
TYPEWRITTEN_RELATIVE_PATH="adaptive"
TYPEWRITTEN_CURSOR="terminal"
TYPEWRITTEN_DISABLE_RETURN_CODE="true"

# Plugins
plugins=(
	git
	zsh-autosuggestions
	zsh-syntax-highlighting
)

# Binds
bindkey -rp ''

ZSH_AUTOSUGGEST_STRATEGY=(history completion)

# Sources
source "$HOME/.cargo/env"   # Rust
source "$ZSH/oh-my-zsh.sh"  # Oh My Zsh (Default)
